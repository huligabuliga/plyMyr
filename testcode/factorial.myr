program factorial;
vars 
    int num, result;

function int factorial(int n)
vars
    int result;
{
    if (n <= 0) then {
        write("factorial:", n);
        return (1);
        
        
    } 
    else {
        write("factorial:", n);
        return (n * factorial(n - 1));
        
    }
}
   
main(){
  num = 4;
  result = factorial(num);
  write("factorial of num is", result);
}